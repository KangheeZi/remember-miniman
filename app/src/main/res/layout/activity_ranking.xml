<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rankingBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RankingActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:background="@color/rankingTabBackground"
        app:tabTextColor="@color/rankingTabText"
        app:tabSelectedTextColor="@color/rankingTabSelectedText"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_back_white"
        android:layout_margin="16dp"/>

</RelativeLayout>
